<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissões para Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MentesBrilhantes"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity2"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JogosJogodavelhaGameplayActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JogosJogodavelhaNiveisActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JogosJogodavelhaEscolhaActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JogosQuebracabecaNiveisActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JogosQuebracabecaGameplayActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VideosMusicasActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ===== ACTIVITIES PRINCIPAIS ===== -->
        <!-- SplashActivity - LAUNCHER (primeira tela) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/MentesBrilhantesSplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity - Menu principal -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ===== ACTIVITIES DE FUNCIONALIDADES ===== -->
        <!-- Área de Jogos -->
        <activity
            android:name=".JogosInicioActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Área de Vídeos -->
        <activity
            android:name=".VideosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Área de Falas/Comunicação -->
        <activity
            android:name=".FalasInicioActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Área de Perfil -->
        <activity
            android:name=".PerfilActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ===== ACTIVITIES DE COMUNICAÇÃO ===== -->
        <activity
            android:name=".FalasComunicacaoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasNecessidadesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasLugaresActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasComidasActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasAnimaisActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasLazerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasEmocoesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FalasSocialActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ===== ACTIVITIES DE VÍDEOS ===== -->
        <activity
            android:name=".VideosEducativoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VideosDesenhosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VideosRelaxarActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- VideoPlayerActivity - Player de vídeos (LANDSCAPE - ÚNICO) ⭐ -->
        <activity
            android:name=".VideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false"
            android:theme="@style/Theme.MentesBrilhantes"
            android:screenOrientation="landscape" />

    </application>

</manifest>
