<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para o hint quando ele sobe -->
    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="MentesBrilhantesSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
        <!-- Remove padding do sistema -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

</resources>