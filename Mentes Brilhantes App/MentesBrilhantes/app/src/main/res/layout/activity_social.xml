<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center"
    android:background="@drawable/fundo_social">

    <!-- Container dos 4 botões funcionais com espaço superior IGUAL AO FALAS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="140dp">

        <!-- Primeira linha de botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btn_audio1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/social_oi"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 1" />

            <ImageButton
                android:id="@+id/btn_audio2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/social_tchau"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 2" />
        </LinearLayout>

        <!-- Segunda linha de botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_audio3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/social_obrigado"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 3" />

            <ImageButton
                android:id="@+id/btn_audio4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/social_porfavor"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 4" />
        </LinearLayout>
    </LinearLayout>

    <!-- Linha dos botões de navegação IGUAL AO FALAS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/btn_sair"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/sair"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Voltar para Falas" />

        <ImageButton
            android:id="@+id/btn_avancar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/avancar"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Avançar Página" />

        <ImageButton
            android:id="@+id/btn_voltar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/voltar"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Voltar Página"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
