<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicio"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <!-- Logo ajustada: maior, mais abaixo e posicionada à direita -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container dos botões centralizados com mais espaçamento -->
    <LinearLayout
        android:id="@+id/container_botoes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_falas"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/falas"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Falas" />

        <ImageButton
            android:id="@+id/btn_jogos"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/jogos"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Jogos" />

        <ImageButton
            android:id="@+id/btn_videos"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/videos"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Vídeos" />

        <ImageButton
            android:id="@+id/btn_perfil"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/perfil"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Perfil" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
