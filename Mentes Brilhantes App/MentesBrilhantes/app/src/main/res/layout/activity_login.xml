<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_login"
    android:fitsSystemWindows="false"
    tools:context=".LoginActivity">

    <!-- Logo no topo direito -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container de botões de login -->
    <LinearLayout
        android:id="@+id/container_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <!-- Botão de Login Biométrico (ImageButton) -->
        <ImageButton
            android:id="@+id/btnBiometric"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/btn_biometria"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Login com Biometria"
            android:visibility="gone" />

        <!-- Botão de Login com Email (ImageButton) -->
        <ImageButton
            android:id="@+id/btnLoginEmail"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/btn_email"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Login com Email" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
