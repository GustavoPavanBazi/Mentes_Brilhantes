<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".JogosQuebracabecaGameplayActivity">

    <!-- Barra de informacoes no topo -->
    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Timer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â±ï¸ Tempo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Contador de pecas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§© PeÃ§as"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_pieces_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 15"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Imagem de fundo do quebra-cabeca -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/info_bar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.4"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Imagem do quebra-cabeÃ§a"
        android:src="@drawable/fundo_jogos_quebracabeca1"
        android:layout_above="@+id/containerBottom" />

    <!-- Grade sobreposta -->
    <com.example.mentesbrilhantes.JogosQuebracabecaGrade
        android:id="@+id/gridOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignTop="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignStart="@id/imageView"
        android:layout_alignEnd="@id/imageView" />

    <!-- Container inferior alternavel -->
    <RelativeLayout
        android:id="@+id/containerBottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD"
        android:padding="8dp">

        <!-- Caixinha de pecas -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal">
            <LinearLayout
                android:id="@+id/piecesContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </HorizontalScrollView>

        <!-- Tela de vitoria -->
        <RelativeLayout
            android:id="@+id/victoryScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">
                <ImageButton
                    android:id="@+id/btn_sair_jogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:contentDescription="Sair do jogo"
                    android:src="@drawable/btn_jogos_sair_vermelho" />
                <ImageButton
                    android:id="@+id/btn_jogar_novamente"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:contentDescription="Jogar novamente"
                    android:src="@drawable/btn_jogar_novamente_vermelho" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <!-- Animacao de confetes -->
    <com.example.mentesbrilhantes.JogosQuebracabecaConfetes
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Mensagem de parabens -->
    <TextView
        android:id="@+id/txt_parabens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="ðŸŽ‰ ParabÃ©ns!\nVocÃª completou o quebra-cabeÃ§a! ðŸŽ‰"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:padding="20dp"
        android:background="#E8FFFFFF"
        android:elevation="10dp"
        android:visibility="gone" />

</RelativeLayout>