<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center"
    android:background="@drawable/fundo_social">

    <!-- Botoes de audio social -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="140dp">

        <!-- Primeira linha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:id="@+id/btn_audio1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_social_oi"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 1" />
            <ImageButton
                android:id="@+id/btn_audio2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_social_tchau"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 2" />
        </LinearLayout>

        <!-- Segunda linha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_audio3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_social_obrigado"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 3" />
            <ImageButton
                android:id="@+id/btn_audio4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_social_porfavor"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Áudio Social 4" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botoes de navegacao -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <ImageButton
            android:id="@+id/btn_sair"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_sair_verde"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Voltar para Falas" />
        <ImageButton
            android:id="@+id/btn_avancar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_avancar_verde"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Avançar Página" />
        <ImageButton
            android:id="@+id/btn_voltar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_voltar_verde"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Voltar Página"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>