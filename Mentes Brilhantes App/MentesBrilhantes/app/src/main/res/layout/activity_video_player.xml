<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#004bff">

    <!-- WebView para o vídeo -->
    <WebView
        android:id="@+id/webview_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#004bff"
        android:visibility="visible" />

    <!-- Container de controles do vídeo (quando vídeo estiver carregado) -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"
        android:background="#004bff">

        <ImageButton
            android:id="@+id/btn_sair"
            android:layout_width="356dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_sair_azul"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:maxWidth="356dp"
            android:maxHeight="100dp"
            android:adjustViewBounds="false"
            android:contentDescription="Sair do vídeo" />
    </LinearLayout>

    <!-- Tela de erro sem internet -->
    <LinearLayout
        android:id="@+id/no_internet_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#004bff"
        android:visibility="gone">

        <!-- SEÇÃO TOPO: Emoji fixo no topo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📶❌"
            android:textSize="90sp"
            android:layout_gravity="center"
            android:paddingTop="60dp"
            android:paddingBottom="20dp" />

        <!-- ✅ SEÇÃO MEIO: Textos subidos um pouco -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center|top"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="80dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conecte-se à Internet"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="25dp" />

            <!-- Submensagem -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifique sua conexão WiFi ou dados móveis\npara assistir aos vídeos"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:lineSpacingExtra="6dp" />

        </LinearLayout>

        <!-- SEÇÃO RODAPÉ: Botão fixo no rodapé -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="40dp">

            <ImageButton
                android:id="@+id/btn_voltar_erro"
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/btn_sair_azul"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:maxWidth="320dp"
                android:maxHeight="100dp"
                android:adjustViewBounds="false"
                android:contentDescription="Voltar"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
