<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_perfil"
    android:fitsSystemWindows="false"
    tools:context=".PerfilActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/btn_videos_scrollbar"
        android:scrollbarSize="8dp"
        android:fadeScrollbars="false"
        android:paddingEnd="4dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="16dp">

            <!-- 1. Campo NOME -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quadrado_perfil_nome"
                    android:scaleType="fitXY"
                    android:contentDescription="Quadrado Nome" />

                <com.example.mentesbrilhantes.OutlinedTextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="18dp" />
            </FrameLayout>

            <!-- 2. Campo IDADE -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quadrado_perfil_idade"
                    android:scaleType="fitXY"
                    android:contentDescription="Quadrado Idade" />

                <com.example.mentesbrilhantes.OutlinedTextView
                    android:id="@+id/tv_idade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 anos"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="18dp" />
            </FrameLayout>

            <!-- 3. Campo PREFERÊNCIA DE VOZ -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quadrado_perfil_preferencia"
                    android:scaleType="fitXY"
                    android:contentDescription="Quadrado Preferência" />

                <RadioGroup
                    android:id="@+id/rg_voice_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="12dp">

                    <com.example.mentesbrilhantes.OutlinedRadioButton
                        android:id="@+id/rb_voice_mas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masculina"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:button="@drawable/radio_button_black"
                        android:paddingStart="8dp"
                        android:layout_marginEnd="32dp"
                        app:buttonTint="#000000" />

                    <com.example.mentesbrilhantes.OutlinedRadioButton
                        android:id="@+id/rb_voice_fem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feminina"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:button="@drawable/radio_button_black"
                        android:paddingStart="8dp"
                        app:buttonTint="#000000" />
                </RadioGroup>
            </FrameLayout>

            <!-- 4. Campo EMAIL -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quadrado_perfil_email"
                    android:scaleType="fitXY"
                    android:contentDescription="Quadrado Email" />

                <com.example.mentesbrilhantes.OutlinedTextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@exemplo.com"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="18dp" />
            </FrameLayout>

            <!-- 5. Campo NOME RESPONSÁVEL -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quadrado_perfil_responsavel"
                    android:scaleType="fitXY"
                    android:contentDescription="Quadrado Responsável" />

                <com.example.mentesbrilhantes.OutlinedTextView
                    android:id="@+id/tv_responsavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Responsável"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="18dp" />
            </FrameLayout>

            <!-- 6. Campo TELEFONE DO RESPONSÁVEL -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quadrado_perfil__tel_responsavel"
                    android:scaleType="fitXY"
                    android:contentDescription="Quadrado Telefone" />

                <com.example.mentesbrilhantes.OutlinedTextView
                    android:id="@+id/tv_celular_responsavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11) 99999-9999"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="18dp" />
            </FrameLayout>

            <!-- 7. Botão SAIR -->
            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/btn_perfil_sair"
                android:scaleType="fitXY"
                android:background="@null"
                android:adjustViewBounds="false"
                android:contentDescription="Sair da Conta" />

        </LinearLayout>
    </ScrollView>

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_width="356dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_perfil_voltar"
        android:scaleType="fitXY"
        android:background="@null"
        android:adjustViewBounds="false"
        android:contentDescription="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
