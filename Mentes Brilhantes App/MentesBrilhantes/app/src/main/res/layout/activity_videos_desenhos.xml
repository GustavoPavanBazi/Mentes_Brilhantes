                    android:layout_height="wrap_content"
                    android:text="Mundo do Elmo e Elmo, o Musical - Vila Sésamo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:id="@+id/frame_video1"
                    android:layout_width="340dp"
                    android:layout_height="195dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_video">

                    <ImageButton
                        android:id="@+id/btn_video1"
                        android:layout_width="324dp"
                        android:layout_height="179dp"
                        android:layout_gravity="center"
                        android:src="@drawable/videos_desenhos_thumb1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_imagebutton"
                        android:clipToOutline="true"
                        android:contentDescription="Mundo do Elmo e Elmo, o Musical - Vila Sésamo" />
                </FrameLayout>
            </LinearLayout>

