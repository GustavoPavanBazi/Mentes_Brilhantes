<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center"
    android:background="@drawable/fundo_jogos">

    <!-- Botoes de jogos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="140dp">

        <!-- Primeira linha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:id="@+id/btn_jogos_quebra_cabeca"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_jogos_quebra_cabeca"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Quebra-Cabeça" />
            <ImageButton
                android:id="@+id/btn_jogos_jogo_da_velha"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_jogos_jogo_da_velha"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Jogo da Velha" />
        </LinearLayout>

        <!-- Segunda linha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_comidas"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_jogos_jogo_da_memoria"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Jogo da Memória" />
            <ImageButton
                android:id="@+id/btn_banheiro"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:src="@drawable/btn_jogos_conectar"
                android:scaleType="fitXY"
                android:background="@null"
                android:padding="0dp"
                android:adjustViewBounds="false"
                android:contentDescription="Jogo de Conectar" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botoes de navegacao -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <ImageButton
            android:id="@+id/btn_sair"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_jogos_sair_vermelho"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Sair" />
        <ImageButton
            android:id="@+id/btn_avancar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_jogos_avancar"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Avançar Página" />
        <ImageButton
            android:id="@+id/btn_voltar"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:src="@drawable/btn_jogos_voltar"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:adjustViewBounds="false"
            android:contentDescription="Voltar Página"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
